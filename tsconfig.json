{
    "compilerOptions": {
        "removeComments": true,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "strictNullChecks": true,
        "module": "es2015",
        "outDir": "dist",
        "target": "es5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "stripInternal": true,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": false,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "rootDir": "",
        "baseUrl": "",
        "types": [
            "node",
            "jasmine"
        ],
        "lib": [
            "dom",
            "es2015"
        ],
        "suppressImplicitAnyIndexErrors": true
    },
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true
    },
    "angularCompilerOptions": {
        "strictMetadataEmit": true
    },
    "files": [
        "src/index.ts"
    ],
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/tests",
        "**/*-ngfactory.ts",
        "**/*.spec.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
