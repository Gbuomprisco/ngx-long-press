{
    "compilerOptions": {
        "removeComments": true,
        "noImplicitAny": false,
        "module": "es2015",
        "target": "es5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "baseUrl": "",
        "inlineSources": true,
        "skipLibCheck": true,
        "typeRoots": [ "./node_modules/@types" ],
        "types": ["node", "jasmine"],
        "suppressImplicitAnyIndexErrors": true,
        "lib": [
            "dom",
            "es2015"
        ]
    },
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true
    },
    "angularCompilerOptions": {
        "genDir": "factories",
        "strictMetadataEmit": true
    },
    "files": [
        "src/index.ts"
    ],
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/tests",
        "**/*.spec.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": { "rewriteTsconfig": false }
}
